<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/sad"
        android:layout_width="393dp"
        android:layout_height="196dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saddial" />

    <TextView
        android:id="@+id/theMesseaGe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/radious3"
        android:lineSpacingExtra="8sp"
        android:singleLine="false"
        android:textColor="@color/Red"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sad" />

    <Button
        android:id="@+id/ConfirmCancelation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/radious2"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textColorHighlight="@color/Red"
        android:textColorLink="@color/Red"
        android:textCursorDrawable="@color/Red"
        app:iconTint="@color/Red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theMesseaGe"
        app:rippleColor="@color/Red" />

    <Button
        android:id="@+id/canceTheCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/radious2"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/Green"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ConfirmCancelation"
        app:layout_constraintTop_toBottomOf="@+id/theMesseaGe"
        app:rippleColor="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>